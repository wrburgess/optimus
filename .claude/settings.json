{
  "permissions": {
    "allow": [
      "Bash(gh run:*)",
      "Bash(gh run view:*)",
      "Bash(gh workflow:*)",
      "Bash(gh workflow view:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "Bash(gh api:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.mpi-standards/claude/hooks/enforce-branch-creation.sh"
          }
        ]
      }
    ]
  }
}
